<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/f3_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/f3_recyclerview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/f3re_write_pic_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/f3re_ppic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <com.agrawalsuneet.dotsloader.loaders.CircularDotsLoader
                android:id="@+id/f3re_write_progress"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                app:loader_animDur="80"
                app:loader_bigCircleRadius="12dp"
                app:loader_circleRadius="3dp"
                app:loader_defaultColor="@color/light_gray"
                app:loader_firstShadowColor="@color/base1"
                app:loader_secondShadowColor="@color/base3"
                app:loader_selectedColor="@color/base2"
                app:loader_showRunningShadow="true" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/f3re_under_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/f3btnlayout"
            android:layout_toRightOf="@+id/f3re_write_pic_layout"
            android:padding="5dp">

            <TextView
                android:id="@+id/f3re_messege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f3re_under_layout"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/f3re_write_pic_layout">

            <RelativeLayout
                android:id="@+id/f3re_userimg_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/f3re_pic"
                    android:layout_width="34dp"
                    android:layout_height="34dp"/>

                <com.agrawalsuneet.dotsloader.loaders.CircularDotsLoader
                    android:id="@+id/f3re_userpic_progress"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    app:loader_animDur="80"
                    app:loader_bigCircleRadius="8dp"
                    app:loader_circleRadius="2dp"
                    app:loader_defaultColor="@color/light_gray"
                    app:loader_firstShadowColor="@color/base1"
                    app:loader_secondShadowColor="@color/base3"
                    app:loader_selectedColor="@color/base2"
                    app:loader_showRunningShadow="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/f3re_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/f3re_userimg_layout" />

            <LinearLayout
                android:id="@+id/manytextlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/f3re_time"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/f3re_userimg_layout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/f3re_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/f3re_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/f3re_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/f3re_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/f3btnlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/f3cardbtn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                android:elevation="4dp"
                app:cardBackgroundColor="@color/base3"
                app:cardCornerRadius="8dp">

                <Button
                    android:id="@+id/f3re_sendmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="@drawable/f2f3sendmessageicon" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/f3dec_card"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/f2f3buttonlayout"
                android:elevation="4dp"
                app:cardBackgroundColor="@color/base3"
                app:cardCornerRadius="8dp">

                <Button
                    android:id="@+id/f3dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="@drawable/f2f3decbutton" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>