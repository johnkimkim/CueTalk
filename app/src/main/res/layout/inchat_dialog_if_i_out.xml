<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/inchat_dialog_if_i_out_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="대화방을 나가겠습니까?" />

        <Button
            android:id="@+id/inchat_dialog_if_i_out_okbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/inchat_dialog_if_i_out_cancelbtn"
            android:layout_below="@+id/inchat_dialog_if_i_out_title"
            android:text="확인" />

        <Button
            android:id="@+id/inchat_dialog_if_i_out_cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_below="@+id/inchat_dialog_if_i_out_title"
            android:text="취소" />
    </RelativeLayout>

</LinearLayout>