<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base5"
    tools:context=".fragment.Fragment3">

    <RelativeLayout
        android:id="@+id/f3titlebar"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="중고거래"
            android:textSize="18dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/f3fragdec"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/sirenicon"
            android:button="@android:color/transparent" />

    </RelativeLayout>

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/f3linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/f3titlebar"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <RadioButton
            android:id="@+id/f3radio_all"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/f3radio_all_selector"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="전체" />

        <View
            android:id="@+id/f3view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/f3radio_all"
            android:background="@color/base1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/f3view2"
            android:layout_toRightOf="@+id/f3view1"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/f3radio_group1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/f3radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/f3radio_ct_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="핸드폰"
                    android:textColor="@color/f3radio_text_color" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base1" />

                <RadioButton
                    android:id="@+id/f3radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/f3radio_ct_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="컴퓨터"
                    android:textColor="@color/f3radio_text_color" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base1" />

                <RadioButton
                    android:id="@+id/f3radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/f3radio_ct_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="생활가전"
                    android:textColor="@color/f3radio_text_color" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base1" />

                <RadioButton
                    android:id="@+id/f3radio4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/f3radio_ct_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="가구"
                    android:textColor="@color/f3radio_text_color" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/base1" />

            <RadioGroup
                android:id="@+id/f3radio_group2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/f3radio5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/f3radio_cb_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="여성의류"
                    android:textColor="@color/f3radio_text_color" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base1" />

                <RadioButton
                    android:id="@+id/f3radio6"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/f3radio_cb_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="남성의류"
                    android:textColor="@color/f3radio_text_color" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base1" />

                <RadioButton
                    android:id="@+id/f3radio7"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/f3radio_cb_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="미용"
                    android:textColor="@color/f3radio_text_color" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/base1" />

                <RadioButton
                    android:id="@+id/f3radio8"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/f3radio_cb_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="기타"
                    android:textColor="@color/f3radio_text_color" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:id="@+id/f3view2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/fragment3_write"
            android:background="@color/base1" />

        <Button
            android:id="@+id/fragment3_write"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/f3radio_write_1"
            android:text="작성" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/fragment3_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateTint="@color/base1"
        android:visibility="invisible" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/f3_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/f3linear"
        android:layout_marginTop="-2dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment3_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>