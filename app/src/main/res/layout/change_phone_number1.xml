<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/change_phone_number1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핸드폰번호 변경"/>

    <TextView
        android:id="@+id/change_phone_number1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호 입력"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/change_phone_number1_title"/>

    <EditText
        android:id="@+id/change_phone_number1_edittext1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_phone_number1_text"
        android:layout_margin="10dp"
        android:inputType="number"
        android:digits="0123456789"
        android:maxLength="6"/>

    <Button
        android:id="@+id/change_phone_number1_okbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/change_phone_number1_edittext1"
        android:layout_below="@+id/change_phone_number1_text"
        android:text="인증요청"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/change_phone_number1_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FF0000"/>

    <ProgressBar
        android:id="@+id/change_phone_number1_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>