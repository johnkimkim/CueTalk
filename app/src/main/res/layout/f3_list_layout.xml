<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="10dp"
    android:id="@+id/f3_recyclerview">

    <ImageView
        android:id="@+id/f3re_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/picnull" />

    <ImageView
        android:id="@+id/f3re_ppic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/f3re_pic"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/f3re_ppic">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/f3re_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/f3re_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/f3re_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/f3re_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/f3re_messege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>
    </LinearLayout>

    <TextView
        android:id="@+id/f3re_count"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"/><!--필요없음-->

    <TextView
        android:id="@+id/f3re_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/f3re_sendmsg"
        android:layout_below="@+id/f3re_count"/>

    <Button
        android:id="@+id/f3re_sendmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="메시지"/>


</RelativeLayout>